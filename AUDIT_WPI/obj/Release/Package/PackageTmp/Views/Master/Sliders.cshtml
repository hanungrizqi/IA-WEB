
@{
    ViewBag.Title = "Sliders";
    ViewBag.JS = "/Scripts/Page/MasterSliders.js";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="content-heading">Image Sliders</h2>
<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">
            Sliders<small> Set Images Slider's</small>
        </h3>
    </div>
    <div class="block-content">
        <form action="#" method="POST" enctype="multipart/form-data" id="sliderForm">
            <div class="row push">
                <div class="col-lg-4">
                    <p class="text-muted">
                        File inputs, showcasing both single files images
                    </p>
                </div>
                <div class="col-lg-8 col-xl-5 overflow-hidden">
                    <div class="mb-4">
                        <label class="form-label" for="imgSlider">Upload Images</label>
                        <input class="form-control" type="file" accept=".jpg,.jpeg,.png" name="files[]" id="imgSlider">
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="block-content block-content-full block-content-sm bg-body-light fs-sm">
        <div class="block-options justify-content-center">
            <div class="row text-center">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-sm btn-success" onclick="submitImage()">
                        <i class="fa fa-check-circle opacity-50 me-1"></i> Submit
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
