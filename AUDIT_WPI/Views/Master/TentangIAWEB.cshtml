
@{
    ViewBag.Title = "About IA Dept";
    ViewBag.JS = "/Scripts/Page/MasterContent.js";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="content-heading">About IA Dept</h2>

<div class="block block-rounded block-link-shadow">
    <div class="block-header block-header-default">
        <h3 class="block-title">Form Content <small>Insert New Content</small></h3>
    </div>
    <div class="block-content">
        <div class="row justify-content-center">
            <div class="col-sm-6 col-md-6">
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label" for="txt_nmContent">Name Content</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control form-control-sm " id="txt_nmContent" name="txt_nmContent">
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label" for="txt_attach">Attachment</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="file" accept=".pdf" id="txt_attach">
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="block-content block-content-full block-content-sm bg-body-light fs-sm">
        <div class="block-options justify-content-center">
            <div class="row text-center">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-sm btn-success" onclick="submitContent()">
                        <i class="fa fa-check-circle opacity-50 me-1"></i> Submit
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="block block-rounded block-link-shadow">
    <div class="block-header block-header-default">
        <h3 class="block-title">Table Content <small>All List Content's</small></h3>
    </div>
    <div class="block-content">
        <div class="row justify-content-center pb-4">
            <div class="col-sm-12 col-md-12 table-responsive">
                <table class="table table-bordered table-striped table-vcenter js-dataTable-full-pagination w-100" id="table_content">
                    <thead class="text-center">
                        <tr>
                            <th>No</th>
                            <th>Name Content</th>
                            <th>Attachment</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
