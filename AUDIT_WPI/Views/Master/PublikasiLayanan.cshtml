
@{
    ViewBag.Title = "Publikasi";
    ViewBag.JS = "/Scripts/Page/MasterPublikasi.js";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="content-heading">Publikasi Internal Audit &amp; Risk Management</h2>
<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">
            Table Publikasi &amp; Layanan <small>Set All References</small>
        </h3>
        <div class="block-options">
            <div class="block-options-item">
                <button type="button" class="btn btn-success py-2 mb-0" data-bs-toggle="modal" data-bs-target="#modal_insert">
                    <i class="fa fa-add opacity-50 me-1"></i> Add App
                </button>
            </div>
        </div>
    </div>
    <div class="block-content block-content-full">
        <table class="table table-bordered table-striped table-vcenter js-dataTable-responsive w-100" id="tbl_publikasi">
            <thead class="text-center">
                <tr>
                    <th>NO</th>
                    <th>NAME APP</th>
                    <th>LINK/PATH APP</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<div class="modal" id="modal_insert" tabindex="-1" aria-labelledby="modal-normal" aria-modal="true" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block block-rounded shadow-none mb-0">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Add New App</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <label class="form-label" for="txt_app">NAME APP</label>
                        <input type="text" class="form-control" id="txt_app" name="txt_app">
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <label class="form-label">LINK APP</label>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="chk_linkApp" name="chk_linkApp">
                            <label class="form-check-label" for="chk_linkApp">Upload Files</label>
                        </div>
                        <div id="linkAppContainer">
                            <input type="text" class="form-control" id="txt_linkApp" name="txt_linkApp">
                        </div>
                    </div>
                </div>
                <div class="block-content block-content-full block-content-sm text-end border-top">
                    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-alt-primary" onclick="insertApp()">
                        Insert
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


@*Modal Update source*@
<div class="modal" id="modal_update" tabindex="-1" aria-labelledby="modal-normal" aria-modal="true" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block block-rounded shadow-none mb-0">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Add New App</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <input type="text" name="txt_id" id="txt_id" hidden />
                        <label class="form-label" for="txt_app_update">NAME APP</label>
                        <input type="text" class="form-control" id="txt_app_update" name="txt_app_update">
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <label class="form-label" for="txt_linkApp_update">LINK APP</label>
                        <input type="text" class="form-control" id="txt_linkApp_update" name="txt_linkApp_update">
                    </div>
                </div>
                <div class="block-content block-content-full block-content-sm text-end border-top">
                    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-alt-primary" onclick="updateApp()">
                        Insert
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
